{
  "name": "ToDo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=8.12.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.13.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.6.2",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.9",
    "@types/node": "12.0.0",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "^7.1.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-scrollbar": "^0.4.10",
    "@types/recompose": "^0.30.7",
    "@types/redux-form": "^8.1.5",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.5.2",
    "react": "^16.8.6",
    "react-addons-css-transition-group": "^15.6.2",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-scrollbar": "^0.5.6",
    "recompose": "^0.30.0",
    "redux-form": "^8.2.6",
    "todoist-api-ts": "^1.0.3",
    "typescript": "3.4.5"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "lint:all:check": "yarn run lint:styles:check && yarn run lint:scripts:check",
    "lint:all:fix": "yarn run lint:styles:fix && yarn run lint:scripts:fix",
    "lint:scripts:check": "eslint --format friendly \"src/**/*.{ts,tsx}\"",
    "lint:scripts:fix": "yarn run lint:scripts:check --fix",
    "lint:styles:check": "stylelint --custom-formatter=node_modules/stylelint-formatter-pretty \"src/**/*.{scss,css}\"",
    "lint:styles:fix": "yarn run lint:styles:check --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "yarn run lint:scripts:fix",
      "git add"
    ],
    "src/**/*.(css|scss)": [
      "yarn run lint:styles:fix",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "8.0.5",
    "customize-cra": "^0.4.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-formatter-friendly": "^6.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npx": "^10.2.0",
    "prettier": "^1.17.0",
    "source-map-explorer": "^1.8.0",
    "stylelint": "^10.1.0",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-formatter-pretty": "^1.0.3",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.6.1"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss",
      "stylelint-config-rational-order",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-config-rational-order/plugin",
      "stylelint-scss"
    ],
    "rules": {
      "declaration-empty-line-before": null,
      "scss/declaration-nested-properties-no-divided-groups": true,
      "at-rule-no-unknown": null,
      "block-no-empty": null,
      "plugin/rational-order": [
        true,
        {
          "empty-line-between-groups": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "plugins": [
      "react",
      "prettier",
      "typescript",
      "simple-import-sort"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "react-app",
      "airbnb",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "prettier/react",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts",
            ".tsx",
            ".json"
          ]
        }
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "excludedFiles": [
          "src/**/*.js"
        ],
        "parser": "espree",
        "env": {
          "node": true
        },
        "rules": {
          "@typescript-eslint/no-var-requires": 0,
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                "parent",
                "sibling",
                "index"
              ],
              "newlines-between": "always-and-inside-groups"
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreDeclarationSort": true
            }
          ],
          "simple-import-sort/sort": 0
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/class-name-casing": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "simple-import-sort/sort": 2,
      "import/order": 0,
      "import/imports-first": 2,
      "import/newline-after-import": 2,
      "import/no-extraneous-dependencies": 0,
      "import/no-anonymous-default-export": 2,
      "import/no-unresolved": {
        "commonjs": true
      },
      "react/jsx-key": 2,
      "react/jsx-one-expression-per-line": 0,
      "react/prop-types": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "jsx-a11y/label-has-for": 0,
      "prettier/prettier": 1,
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": 0,
      "no-await-in-loop": 0,
      "no-use-before-define": 0,
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "no-debugger": 1,
      "sort-imports": 0,
      "spaced-comment": 1
    }
  }
}
